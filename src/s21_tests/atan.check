#include "s21_math.h"
#include <math.h>
#include <stdio.h>
#include <stdlib.h>

#test atan_1
    double x=0;
    ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);

#test atan_2
    double x=1;
    ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);

#test atan_3
    double x=S21_INF;
    ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);

#test atan_4
    double x=S21_NAN;
    ck_assert_ldouble_nan(s21_atan(x));
    // ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);


#test atan_5
    double x;
    for (x = 1; x < 100; x *= (x+1)) {
        ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);
    }

#test atan_6
    double x;
    for (x = -1; x > -1e+100; x *=M_PI) {
        ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);
    }

#test atan_7
    double x;
    for (x = 1; x > S21_EPS_TEST; x /=(0.5*M_PI)) {
        ck_assert_ldouble_eq_tol(s21_atan(x), atanl(x), S21_EPS_TEST);
    }